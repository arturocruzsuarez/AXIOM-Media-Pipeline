# --- DJANGO SETTINGS ---
# Generar una nueva para producción. No usar la real aquí.
SECRET_KEY=change_me_to_a_secure_random_string
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,web

# --- DATABASE (PostgreSQL) ---
# Si usas Docker, el host suele ser 'db' o 'postgres'
DB_NAME=axiom_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# --- REDIS & CELERY ---
# URL de conexión para la cola de tareas
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- AWS S3 (Cloud Storage) ---
# Dejar vacío si se usa almacenamiento local en desarrollo
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=us-east-1